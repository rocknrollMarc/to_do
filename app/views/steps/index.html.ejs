<div class="hero-unit">
  <h2>All Steps</h2>
  <%- linkTo('Create a new Step', addStepPath, {class: 'btn pull-right'}); %>
</div>

<div id="steps-list">
<% if (steps) { %>
<% for (var i = 0, ii = steps.length; i < ii; i++) { %>
  <div class="row list-item" id="step-<%= steps[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(steps[i].title, stepPath(steps[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= steps[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>